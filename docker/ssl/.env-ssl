# PCMS SSL Environment Configuration
# Dynamic IP Environment Docker Compose Configuration

# SSL/HTTPS Configuration
SSL_ENABLED=true
SSL_DEV_MODE=true
FORCE_HTTPS=false

# Nginx Configuration
NGINX_CONFIG=./nginx/default-https.conf
SSL_CERT_DIR=./ssl/self-signed
DOMAIN_NAME=pcms-dynamic.local
HEALTH_CHECK_URL=http://localhost:8000/api/staff/

# Application Configuration
BUILD_TARGET=development
CREATE_TEST_DATA=true
DB_ENGINE=sqlite

# Network Configuration
DOCKER_SUBNET=172.20.0.0/16
DOCKER_GATEWAY=172.20.0.1