# =================================================================
# 培正中學員工管理系統 (PCMS Staff Management System)
# 環境變數配置樣本 - 開發環境
# =================================================================
#
# 使用說明：
# 1. 複製此文件為 .env: cp .env.example .env
# 2. 根據實際環境修改配置值
# 3. 確保 .env 文件已加入 .gitignore
#

# =================================================================
# Django 基本配置
# =================================================================
# 開發模式（生產環境請設為 False）
DEBUG=True

# Django 密鑰（生產環境請生成新的隨機密鑰）
SECRET_KEY=your-very-secret-key-for-development-only-change-in-production

# 允許訪問的主機名
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0,*.localhost

# =================================================================
# 數據庫配置
# =================================================================
# 開發環境使用 SQLite
DATABASE_URL=sqlite:///db/sqlitedb/dev.db

# 生產環境 PostgreSQL 配置（取消註釋並修改）
# DATABASE_URL=postgresql://pcms_user:your_password@localhost:5432/pcms_staff
# DATABASE_HOST=localhost
# DATABASE_PORT=5432
# DATABASE_NAME=pcms_staff
# DATABASE_USER=pcms_user
# DATABASE_PASSWORD=your_secure_password

# =================================================================
# CORS 設置（跨域請求）
# =================================================================
# 開發環境允許所有來源
CORS_ALLOW_ALL_ORIGINS=True

# 生產環境指定允許的來源
# CORS_ALLOWED_ORIGINS=https://your-domain.com,https://www.your-domain.com

# =================================================================
# 前端相關配置
# =================================================================
# 前端應用 URL
FRONTEND_URL=https://localhost

# 後端 API URL
BACKEND_URL=https://localhost

# =================================================================
# 文件上傳配置
# =================================================================
# 媒體文件根目錄
MEDIA_ROOT=media/

# 媒體文件 URL 前綴
MEDIA_URL=/media/

# 靜態文件根目錄
STATIC_ROOT=staticfiles/

# 靜態文件 URL 前綴
STATIC_URL=/static/

# 文件上傳大小限制（MB）
FILE_UPLOAD_MAX_MEMORY_SIZE=10485760  # 10MB

# =================================================================
# 郵件配置
# =================================================================
# 郵件後端（開發環境使用控制台）
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend

# SMTP 配置（生產環境）
# EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=your-email@gmail.com
# EMAIL_HOST_PASSWORD=your-app-password

# 默認發件人
DEFAULT_FROM_EMAIL=noreply@puiching.edu.mo

# =================================================================
# 緩存配置
# =================================================================
# 開發環境使用內存緩存
CACHE_BACKEND=django.core.cache.backends.locmem.LocMemCache

# Redis 緩存配置（生產環境）
# CACHE_BACKEND=django.core.cache.backends.redis.RedisCache
# REDIS_URL=redis://localhost:6379/1

# =================================================================
# 日誌配置
# =================================================================
# 日誌級別
LOG_LEVEL=DEBUG

# 日誌文件路徑
LOG_FILE=logs/django.log

# =================================================================
# 安全設置
# =================================================================
# 會話安全（生產環境啟用）
SESSION_COOKIE_SECURE=False
CSRF_COOKIE_SECURE=False

# 生產環境安全設置（取消註釋）
# SESSION_COOKIE_SECURE=True
# CSRF_COOKIE_SECURE=True
# SECURE_SSL_REDIRECT=True
# SECURE_HSTS_SECONDS=31536000
# SECURE_HSTS_INCLUDE_SUBDOMAINS=True
# SECURE_HSTS_PRELOAD=True
# SECURE_CONTENT_TYPE_NOSNIFF=True
# SECURE_BROWSER_XSS_FILTER=True
# X_FRAME_OPTIONS=DENY

# =================================================================
# 時區和國際化
# =================================================================
# 時區設置
TIME_ZONE=Asia/Macau

# 語言設置
LANGUAGE_CODE=zh-hant

# 啟用時區支持
USE_TZ=True

# 啟用國際化
USE_I18N=True
USE_L10N=True

# =================================================================
# 第三方服務 API
# =================================================================
# Google 服務（如需要）
# GOOGLE_API_KEY=your-google-api-key

# 澳門身份證驗證服務（如需要）
# MACAO_ID_VERIFY_API_URL=https://api.gov.mo/verify
# MACAO_ID_VERIFY_API_KEY=your-api-key

# =================================================================
# Docker 相關配置
# =================================================================
# 容器內部通信主機名
POSTGRES_HOST=db
REDIS_HOST=redis

# 容器端口映射
BACKEND_PORT=8000
FRONTEND_PORT=80
POSTGRES_PORT=5432
REDIS_PORT=6379

# =================================================================
# 開發工具配置
# =================================================================
# Django Debug Toolbar（開發環境）
USE_DEBUG_TOOLBAR=True

# Django Extensions（開發環境）
USE_DJANGO_EXTENSIONS=True

# =================================================================
# 備份和維護
# =================================================================
# 自動備份配置
AUTO_BACKUP_ENABLED=True
BACKUP_RETENTION_DAYS=30
BACKUP_STORAGE_PATH=./backups/

# 維護模式
MAINTENANCE_MODE=False
MAINTENANCE_MESSAGE=系統維護中，請稍後再試 System under maintenance, please try again later

# =================================================================
# 性能監控
# =================================================================
# 性能監控啟用（生產環境）
ENABLE_MONITORING=False

# APM 服務（如 New Relic、Sentry）
# NEW_RELIC_LICENSE_KEY=your-license-key
# SENTRY_DSN=your-sentry-dsn

# =================================================================
# 特定功能開關
# =================================================================
# 員工照片上傳功能
ENABLE_STAFF_PHOTOS=True

# Excel 導入功能
ENABLE_EXCEL_IMPORT=True

# 中英雙語界面
ENABLE_BILINGUAL_UI=True

# 用戶註冊功能
ALLOW_USER_REGISTRATION=False

# =================================================================
# 自定義配置
# =================================================================
# 學校相關信息
SCHOOL_NAME_ZH=培正中學路環校部
SCHOOL_NAME_EN=Pui Ching Middle School
SCHOOL_ADDRESS=澳門路環紅荷路252號
SCHOOL_PHONE=+853-2821-1188

# 系統管理員信息
ADMIN_NAME=系統管理員
ADMIN_EMAIL=admin@puiching.edu.mo
ADMIN_PHONE=+853-2821-1188
