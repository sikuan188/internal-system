# PCMS Staff Management System - Environment Configuration
# 培正中學員工管理系統 - 環境配置

# Django 基本配置
DEBUG=True
SECRET_KEY=pcms-staff-development-secret-key-change-in-production-2025
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0,frontend,backend,pcms_staff_backend,pcms_staff_mysql

# 數據庫配置
DB_ENGINE=mysql
DATABASE_URL=mysql://pcms_admin:pcms_admin@pcms_staff_mysql:3306/pcms_staff_db

# CORS 配置
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000,http://127.0.0.1:3000,http://127.0.0.1:8000
CORS_ALLOW_ALL_ORIGINS=True

# 管理員配置
DJANGO_SUPERUSER_USERNAME=adminkuan
DJANGO_SUPERUSER_EMAIL=sikuan@puiching.edu.mo
DJANGO_SUPERUSER_PASSWORD=admin-Kuan

# Docker 配置
PYTHONDONTWRITEBYTECODE=1
PYTHONUNBUFFERED=1
DJANGO_SETTINGS_MODULE=pcms_staff.settings

#避免前端用 http 取資源或被混合內容阻擋
FRONTEND_URL=https://localhost
BACKEND_URL=https://localhost
CORS_ALLOWED_ORIGINS=https://localhost

# 啟用 HTTPS 代理識別，避免圖片 URL 變成 http 導致被瀏覽器擋掉
HTTPS_ENABLED=true
# 不強制重導（由外層 Nginx 控制），避免迴圈
SECURE_SSL_REDIRECT=false
